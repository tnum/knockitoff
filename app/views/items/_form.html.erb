<%= form_for item, url: item_toggle_path(item.id), remote: true do |f| %>
  <%= f.check_box :state, class: "state" %><div class="description"><%= item.description %></div> <div class="remaining"><%= 7 - (Time.now.to_date - item.created_at.to_date).to_i %> days remaining</div> <div class="created-at">created <%= item.created_at.to_date %></div>
<% end %> 
